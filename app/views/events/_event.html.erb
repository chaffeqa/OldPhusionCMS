<% event = locals[:event] %>

<p>
  <b>Name:</b>
  <%= event.name %>
</p>

<p>
  <b>Start at:</b>
  <%= event.start_at %>
</p>

<p>
  <b>End at:</b>
  <%= event.end_at %>
</p>

<p>
  <b>All day:</b>
  <%= event.all_day %>
</p>

<p>
  <b>Color:</b>
  <%= event.color %>
</p>

<% if event.calendar_elem and event.calendar_elem.display_title %>
  <p>
    <b>Calendar: </b>
    <%= event.calendar_elem.title %>
  </p>
<% end %>
