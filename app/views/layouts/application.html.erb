<!DOCTYPE html>
<html>
  <head>
    <title>PhusionCMS</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body class="clearfloat">
    <div id="page">
      <div id="wrapper" class="clearfloat">
        <div id="header" class="clearfloat"><%= render 'layouts/header' %></div>
        <div id="nav-menu" class="clearfloat">
          <ul class="menu">
            <li><%= link_to get_home_node.menu_name, node_path(get_home_node) %></li>
            <%= render 'layouts/menu', :locals => {:node => get_home_node} %>
          </ul>
        </div>
        <div id="content">
          <% if flash[:notice] %> <p id="notice"><%= notice %></p> <% end %>
          <% if flash[:important_notice] %> <p id="important-notice"><%= flash[:important_notice] %></p><% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
