<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Menu name</th>
    <th>Shortcut</th>
    <th>Displayed</th>
  </tr>

  <% @nodes.each do |node| %>
    <tr>
      <td><%= node.title %></td>
      <td><%= node.menu_name %></td>
      <td><%= node.shortcut %></td>
      <td><%= node.displayed %></td>
      <td><%= link_to 'Show', node %></td>
      <td><%= link_to 'Edit', edit_node_path(node) %></td>
      <td><%= link_to 'Destroy', node, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Node', new_node_path if home_node? %>


<p>
  <%=raw display_menu_list() if home_node? %>
</p>